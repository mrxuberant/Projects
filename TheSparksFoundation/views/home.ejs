<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">

    <title>Home</title>
</head>
<body>
  <div class="container-fluid">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Current Balance</th>
          <th>Transfre Fund</th>
          <th>Visit Profile</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(row){ %>
        <tr>
          <td><%= row.customer %></td>
          <% if(row.current_balance < 1000) { %>
            <td><%= row.current_balance %> <span class="text-danger">You are running out of money!</span></td>
            <% }else{ %>
              <td><%= row.current_balance %></td>
              <% } %>
          <td><a href="http://localhost:5000/transfer?id=<%= row._id %>"><button class="btn btn-danger btn-sm">Transfer</button></a></td>
          <td><a href="http://localhost:5000/profile?id=<%= row._id %>"><button class="btn btn-primary btn-sm" >Visit</button></a></td>
        </tr>
        <% }) %>
        </tbody>
    </table>
  </div>
</body>
</html>